<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlignTextView_Default">
        <item name="align">hortal</item>
    </style>

    <style name="controls_wrap_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 自定义Dialog样式 -->
    <style name="BottomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowAnimationStyle">@style/BottomDialog_Animation</item>
    </style>

    <!-- 自定义Dialog动画样式 -->
    <style name="BottomDialog_Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_exit</item>
    </style>

    <declare-styleable name="MiRequiredTextViewPro">
        <attr name="prefixText" format="string" />
        <attr name="prefixTextColor" format="color" />
        <attr name="prefixVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>

    <style name="BottomDialogAnim">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_anim_slide_down</item>
    </style>

</resources>